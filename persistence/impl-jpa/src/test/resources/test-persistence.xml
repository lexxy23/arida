<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="aridaPU">
    <jta-data-source>jdbc/arida</jta-data-source>
    <class>ds2.arida.persistence.impl.jpa.entities.AccountEntity</class>
    <class>ds2.oss.core.base.impl.StateAwareModule</class>
    <class>ds2.oss.core.base.impl.CreatedModifiedAwareModule</class>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
      <property name="eclipselink.logging.level.sql" value="FINE" />
      <property name="eclipselink.logging.parameters" value="true" />
    </properties>
  </persistence-unit>
</persistence>